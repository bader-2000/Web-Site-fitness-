@model Fitness.Models.Payment

@{

    ViewData["Title"] = "Details";
    var UserRoleID = Context.Session.GetInt32("UserRoleID"); 

    if (UserRoleID.HasValue && (UserRoleID == 1))
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    else if (UserRoleID.HasValue && (UserRoleID == 2))
    {
        Layout = "~/Views/Shared/_LayoutTrainer.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_LayoutProfilePage.cshtml";
    }
   

   
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="~/DesignProfileUser/style.css" id="bootstrap-css">
<link rel="stylesheet" href="~/DesignProfileUser/ditelsProfile.css" />
<link rel="stylesheet" href="~/css/UserVisaPage.css" />
<title>Confirmation</title>
<script type="text/javascript">
    document.addEventListener("DOMContentLoaded", function() {
        var message = '@TempData["SuccessMessage"]';
        if (message) {
            alert(message);
        }
    });
</script>

<div class="container mt-5">
@if (Model?.Amount != null)
{
    <div class="container mt-5">
        <!-- Card for Payment Details -->
        <div class="card profile-container shadow-lg rounded-lg mb-4">
            <div class="card-header">
                <h1>My Visa Card</h1>
            </div>
            <div class="card-body">
                <h4>Payment Details</h4>
                <hr />
                <dl class="row">
                    <div class="col-sm-6">
                        <dt>@Html.DisplayNameFor(model => model.Amount)</dt>
                        <dd>@Html.DisplayFor(model => model.Amount)</dd>
                    </div>
                    <div class="col-sm-6">
                        <dt>@Html.DisplayNameFor(model => model.Paymentdate)</dt>
                        <dd>@Html.DisplayFor(model => model.Paymentdate)</dd>
                    </div>
                    <div class="col-sm-6">
                        <dt>@Html.DisplayNameFor(model => model.Cardnumber)</dt>
                        <dd>@Html.DisplayFor(model => model.Cardnumber)</dd>
                    </div>
                    <div class="col-sm-6">
                        <dt>@Html.DisplayNameFor(model => model.Cardholdername)</dt>
                        <dd>@Html.DisplayFor(model => model.Cardholdername)</dd>
                    </div>
                    <div class="col-sm-6">
                        <dt>@Html.DisplayNameFor(model => model.Expirydate)</dt>
                        <dd>@Html.DisplayFor(model => model.Expirydate)</dd>
                    </div>
                </dl>
            </div>
            <div class="card-footer">
                <p>Visa Card Payment</p>
            </div>
        </div>
    </div>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            You don't have any visa card.
        </div>
    }

</div>
