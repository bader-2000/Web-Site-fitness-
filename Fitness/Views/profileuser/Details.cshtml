@model Fitness.Models.Profile

@{
    ViewData["Title"] = "Details";
    var UserRoleID = Context.Session.GetInt32("UserRoleID"); 

    if (UserRoleID.HasValue && (UserRoleID == 1))
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    else if (UserRoleID.HasValue && (UserRoleID == 2))
    {
        Layout = "~/Views/Shared/_LayoutTrainer.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_LayoutHomePage.cshtml";
    }
   
}

<link href="~/DesignProfileUser/style.css" rel="stylesheet" id="bootstrap-css">


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">


<link rel="stylesheet" href="~/DesignProfileUser/ditelsProfile.css" />

<div class="profile-container">
    <div class="profile-header">
        <img src="@Url.Content("~/images/" + Model?.Photo)" alt="User Photo" />
        <h1>@Html.DisplayFor(model => model.Name) @Html.DisplayFor(model => model.Lname)</h1>
        <h2>@Html.DisplayFor(model => model.Username)</h2>
    </div>
    <div class="profile-details">
        <div class="detail-item">
            <label>First Name</label>
            <p>@Html.DisplayFor(model => model.Name)</p>
        </div>
        <div class="detail-item">
            <label>Family Name</label>
            <p>@Html.DisplayFor(model => model.Lname)</p>
        </div>
        <div class="detail-item">
            <label>Email</label>
            <p>@Html.DisplayFor(model => model.Email)</p>
        </div>
        <div class="detail-item">
            <label>User Name</label>
            <p>@Html.DisplayFor(model => model.Username)</p>
        </div>
        <div class="detail-item">
            <label>User Password</label>
            <p>@Html.DisplayFor(model => model.Userpassword)</p>
        </div>
        <div class="detail-item">
            <label>Date Of Birth</label>
            <p>@Html.DisplayFor(model => model.DateOfBirth)</p>
        </div>
    </div>
    <a class="edit-button" asp-controller="ProfileUser" asp-action="Edit" asp-route-id="@Model?.Profileid">Edit Your Profile</a>
</div>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
