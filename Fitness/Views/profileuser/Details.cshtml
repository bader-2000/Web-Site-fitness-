@model Fitness.Models.Profile

@{
    ViewData["Title"] = "Details";
    var UserRoleID = Context.Session.GetInt32("UserRoleID"); 

    if (UserRoleID.HasValue && (UserRoleID == 1))
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    else if (UserRoleID.HasValue && (UserRoleID == 2))
    {
        Layout = "~/Views/Shared/_LayoutTrainer.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_LayoutHomePage.cshtml";
    }
   
}

<link href="~/DesignProfileUser/style.css" rel="stylesheet" id="bootstrap-css">

<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<div class="container emp-profile">

    <div class="row">
        <div class="col-md-4">
            <div class="profile-img" style="border-radius:30%;">
                <img src="@Url.Content("~/images/" + Model?.Photo)" style="border-radius:20%;" width="150" height="100" alt="my photo" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="profile-head">
                <h5 style="color:black; font-size:18px; font-weight:bold;">
                    @Html.DisplayFor(model => model.Name) @Html.DisplayFor(model => model.Lname)
                </h5>
                <h6>
                    @Html.DisplayNameFor(model => model.Username)
                    @Html.DisplayFor(model => model.Username)
                </h6>
                <p class="proile-rating">RANKINGS : <span>8/10</span></p>
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">My Information</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-md-2">
            <a type="button" style="border: none; border-radius: 1.5rem; width: 70%; padding: 2%; font-weight: 600; color: wheat; cursor: pointer; background-color: black;"
               asp-controller="ProfileUser" asp-action="Edit" asp-route-id="@Model?.Profileid">Edit</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="profile-work">
                <!-- Optional links can be placed here -->
            </div>
        </div>
        <div class="col-md-8">
            <div class="tab-content profile-tab" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">

                    <div class="row">
                        <div class="col-md-6">
                            <label style="color:black; font-size:18px; font-weight:bold;">Name</label>
                        </div>
                        <div class="col-md-6">
                            <p style="color:white; font-size:18px; font-weight:bold;">@Html.DisplayFor(model => model.Name)</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label style="color:black; font-size:18px; font-weight:bold;">Last Name</label>
                        </div>
                        <div class="col-md-6">
                            <p style="color:white; font-size:18px; font-weight:bold;">@Html.DisplayFor(model => model.Lname)</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label style="color:black; font-size:18px; font-weight:bold;">Email</label>
                        </div>
                        <div class="col-md-6">
                            <p style="color:white; font-size:18px; font-weight:bold;">@Html.DisplayFor(model => model.Email)</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label style="color:black; font-size:18px; font-weight:bold;">Username</label>
                        </div>
                        <div class="col-md-6">
                            <p style="color:white; font-size:18px; font-weight:bold;">@Html.DisplayFor(model => model.Username)</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label style="color:black; font-size:18px; font-weight:bold;">Password</label>
                        </div>
                        <div class="col-md-6">
                            <p style="color:white; font-size:18px; font-weight:bold;">@Html.DisplayFor(model => model.Userpassword)</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label style="color:black; font-size:18px; font-weight:bold;">Birth Date</label>
                        </div>
                        <div class="col-md-6">
                            <p style="color:white; font-size:18px; font-weight:bold;">@Html.DisplayFor(model => model.DateOfBirth)</p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>

