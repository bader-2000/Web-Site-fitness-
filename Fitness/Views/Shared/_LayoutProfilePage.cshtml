<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fitness</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Fitness.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/css/UserLayoutProfile.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark shadow-sm">
            <div class="container">
                
                <a class="navbar-brand fw-bold mx-auto"  asp-controller="Home" asp-action="Index">
                    <i class="fas fa-dumbbell me-2"></i>Fitness
                </a>

               
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                @{

                    var UserID = Convert.ToDecimal(Context.Session.GetInt32("UserID"));
                    var UserIsEnter = Context.Session.GetInt32("UserIsEnter");
                    var UserRoleID = Context.Session.GetInt32("UserRoleID");

                }
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link"  asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link"  asp-controller="ProfileUser" asp-action="Details">My</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="ProfileUser" asp-action="MyVisaCard" asp-route-id="@UserID">My Visa Card</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="ProfileUser" asp-action="MySubscription" asp-route-id="@UserID">My Subscriptions</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Fitness - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
