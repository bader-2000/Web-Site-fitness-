<div class="content-wrapper" style="margin-top:100px">
   

    <div class="row ">
    
            <div class="card-body">
            <p>
                <a asp-action="Create">Create New</a>
            </p>
                <h4 class="card-title"> All Profiles</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>  @Html.DisplayNameFor(model => model.Name) </th>
                                <th>  @Html.DisplayNameFor(model => model.Lname) </th>
                                <th>  @Html.DisplayNameFor(model => model.Email) </th>
                                <th>  @Html.DisplayNameFor(model => model.Username) </th>
                                <th>  @Html.DisplayNameFor(model => model.Userpassword) </th>
                                <th>  @Html.DisplayNameFor(model => model.Photo) </th>
                                <th>  @Html.DisplayNameFor(model => model.DateOfBirth) </th>
                            </tr>
                        </thead>
                        <tbody>
                             @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="form-check form-check-muted m-0">
                                            <label class="form-check-label">
                                                <input type="checkbox" class="form-check-input">
                                            </label>
                                        </div>
                                    </td>
                                    <td>
                                    
                                        <img src=@Url.Content("~/images/" + item.Photo) )style="border-radius:50%;" width="75" height="75" alt="my photo" />

                                        <span class="pl-2">@Html.DisplayNameFor(model => model.Name) @Html.DisplayNameFor(model => model.Lname)  </span>
                                    </td>
                                <td>  @Html.DisplayFor(modelitem => item.Email) </td>
                                <td>  @Html.DisplayFor(modelitem => item.Username) </td>
                                <td> @Html.DisplayFor(modelitem => item.Userpassword) </td>
                                <td>  @Html.DisplayFor(modelitem => item.DateOfBirth) </td>
                                    <td>
                                        <div class="badge badge-outline-success">
                                            <a asp-action="Edit" asp-route-id="@item.Profileid">Edit</a> |
                                            <a asp-action="Details" asp-route-id="@item.Profileid">Details</a> |
                                            <a asp-action="Delete" asp-route-id="@item.Profileid">Delete</a>
                                        </div>
                                    </td>
                                </tr>
                               
                            }
                        </tbody>
                    </table>
                </div>
            </div>
    </div>
</div>
