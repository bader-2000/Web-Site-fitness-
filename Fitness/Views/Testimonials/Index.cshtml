<div class="content-wrapper">
    <div class="main-panel">
        <div class="col-12 grid-margin">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Testimonial</h4>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Feedback)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Status)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Tprofile.Name)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Feedback)
                                        </td>
                                        <td>
                                            <div>
                                                @if (item.Status == "Approved")
                                                {
                                                    <span class="badge badge-success">Approved</span>
                                                }
                                                else if (item.Status == "Rejected")
                                                {
                                                    <span class="badge badge-danger">Rejected</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-warning">Pending</span>
                                                }
                                            </div>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Tprofile.Name)
                                        </td>

                                        <td>
                                            @if (item.Status == "Approved")
                                            {
                                                <form asp-controller="Testimonials" asp-action="Approve" method="post" asp-route-id="@item.Testimoid">
                                                    <button type="submit" class="badge badge-outline-success disabled" disabled>Approved</button>
                                                </form>
                                            }
                                            else if (item.Status == "Rejected")
                                            {
                                                <form asp-controller="Testimonials" asp-action="Rejected" method="post" asp-route-id="@item.Testimoid">
                                                    <button type="submit" class="badge badge-outline-danger disabled" disabled>Rejected</button>
                                                </form>
                                            }
                                            else
                                            {
                                                <form asp-controller="Testimonials" asp-action="Approve" method="post" asp-route-id="@item.Testimoid">
                                                    <button type="submit" class="badge badge-outline-primary">Approve</button>
                                                </form>
                                                <form asp-controller="Testimonials" asp-action="Reject" method="post" asp-route-id="@item.Testimoid">
                                                    <button type="submit" class="badge badge-outline-warning">Reject</button>
                                                </form>
                                            }
                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>

            </div>


        </div>
    </div>
</div>

