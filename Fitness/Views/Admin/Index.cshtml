                                <div class="d-flex align-items-center align-self-start">
                                    <h3 class="mb-0">$@ViewBag.numberofRegistered</h3>
                                    <p class="text-success ml-2 mb-0 font-weight-medium">+ @ViewBag.lastRegesterd Last person</p>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="icon icon-box-success ">
                                    <span class="mdi mdi-arrow-top-right icon-item"></span>
                                </div>
                            </div>
                        </div>
                        <h6 class="text-muted font-weight-normal"> Count of Members </h6>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-9">
                                <div class="d-flex align-items-center align-self-start">
                                    <h3 class="mb-0">@ViewBag.numberofSubscreption </h3>

                                </div>
                            </div>
                            <div class="col-3">
                                <div class="icon icon-box-success">
                                    <span class="mdi mdi-arrow-top-right icon-item"></span>
                                </div>
                            </div>
                        </div>
                        <h6 class="text-muted font-weight-normal">  Active Subscreption</h6>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-9">
                                <div class="d-flex align-items-center align-self-start">
                                    <h3 class="mb-0">@ViewBag.numberOfAllSubscreption </h3>

                                </div>
                            </div>
                            <div class="col-3">
                                <div class="icon icon-box-success">
                                    <span class="mdi mdi-arrow-top-right icon-item"></span>
                                </div>
                            </div>
                        </div>
                        <h6 class="text-muted font-weight-normal">Count of Subscreption</h6>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-9">
                                <div class="d-flex align-items-center align-self-start">
                                    <h3 class="mb-0">@ViewBag.CountofPlan</h3>

                                </div>
                            </div>
                            <div class="col-3">
                                <div class="icon icon-box-success ">
                                    <span class="mdi mdi-arrow-top-right icon-item"></span>
                                </div>
                            </div>
                        </div>
                        <h6 class="text-muted font-weight-normal">Count of Plan</h6>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
           <!-- Revenue Card -->
                   <div class="col-12 grid-margin">
                       <div class="card">
                           <div class="card-body">
                               <h5>Revenue</h5>
                               <div class="row">
                                   <div class="col-8 col-sm-12 col-xl-8 my-auto">
                                       <div class="d-flex d-sm-block d-md-flex align-items-center">
                                           <h2 class="mb-0">$@ViewBag.TotalRevenue</h2>
                                           <p class="text-success ml-2 mb-0 font-weight-medium">+3.5%</p>
                                       </div>
                                       <h6 class="text-muted font-weight-normal">11.38% Since last month</h6>
                                   </div>
                                   <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                                       <i class="icon-lg mdi mdi-codepen text-primary ml-auto"></i>
                                   </div>
                               </div>
                           </div>
                       </div>
                   </div>

                      <!-- Chart Card -->
                          <div class="col-12 grid-margin">
                       <div class="card">
                           <div class="card-body">
                               <h5>Subscriptions Over Time</h5>
                               <div>
                                   <canvas id="subscriptionsChart" style="max-width: 100%; height: 400px;"></canvas>
                               </div>
                           </div>
                       </div>

                       <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
                       <script>
                           // الحصول على البيانات من ViewData
                           const chartData = @Html.Raw(ViewData["ChartData"]);

                           // تحويل البيانات إلى arrays
                           const labels = chartData.map(item => `Month ${item.Month}`); // الأشهر
                           const data = chartData.map(item => item.Subscriptions); // عدد الاشتراكات

                           // إعداد الرسم البياني
                           const ctx = document.getElementById('subscriptionsChart').getContext('2d');
                           new Chart(ctx, {
                               type: 'bar', // نوع المخطط
                               data: {
                                   labels: labels, // الأشهر
                                   datasets: [{
                                       label: 'Number of Subscriptions', // عنوان الرسم البياني
                                       data: data, // البيانات
                                       backgroundColor: '#36a2eb', // لون الأعمدة
                                       borderColor: '#fff',
                                       borderWidth: 1,
                                       barThickness: 40, // سمك الأعمدة
                                       hoverBackgroundColor: '#4bc0c0', // لون عند التمرير
                                   }]
                               },
                               options: {
                                   responsive: true,
                                   plugins: {
                                       title: {
                                           display: true,
                                           text: 'Monthly Subscriptions',
                                           font: { size: 18 }
                                       },
                                       legend: {
                                           display: false
                                       }
                                   },
                                   scales: {
                                       x: { ticks: { font: { size: 12 } } },
                                       y: { ticks: { font: { size: 12 } } }
                                   }
                               }
                           });
                       </script>

                   </div>
        </div>
                
       

      
    </div>
