@model Fitness.Models.Infofitness

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Required meta tags -->
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<title>Corona Admin</title>
<!-- plugins:css -->
<link rel="stylesheet" href="~/DesignAdman/assets/vendors/mdi/css/materialdesignicons.min.css">
<link rel="stylesheet" href="~/DesignAdman/assets/vendors/css/vendor.bundle.base.css">
<link rel="stylesheet" href="~/DesignAdman/assets/vendors/jvectormap/jquery-jvectormap.css">
<link rel="stylesheet" href="~/DesignAdman/assets/vendors/flag-icon-css/css/flag-icon.min.css">
<link rel="stylesheet" href="~/DesignAdman/assets/vendors/owl-carousel-2/owl.carousel.min.css">
<link rel="stylesheet" href="~/DesignAdman/assets/vendors/owl-carousel-2/owl.theme.default.min.css">
<link rel="stylesheet" href="~/DesignAdman/assets/css/style.css">
<link rel="shortcut icon" href="~/DesignAdman/assets/images/favicon.png" />


<link rel="stylesheet" href="~/css/ManageStaticPagesEdit.css" />


<div class="content-wrapper bg-dark text-light">
    <div class="main-panel">
        <div class="col-12 grid-margin">
            <div class="card bg-secondary text-light">
                <div class="card-body">
                    <h1 class="card-title text-center">Edit Infofitness</h1>
                    <hr class="border-secondary">
                    <div class="row">
                        <div class="col-md-12">
                            @using (Html.BeginForm("Edit", "Infofitnesses", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()

                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <input type="hidden" asp-for="Idif" />

                                <!-- Email Field -->
                                <div class="form-group mb-4">
                                    <label asp-for="Email" class="control-label text-light">Email</label>
                                    <input asp-for="Email" class="form-control custom-field" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <!-- Phone Field -->
                                <div class="form-group mb-4">
                                    <label asp-for="Phone" class="control-label text-light">Phone</label>
                                    <input asp-for="Phone" class="form-control custom-field" />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>

                                <!-- Location Field -->
                                <div class="form-group mb-4">
                                    <label asp-for="Location" class="control-label text-light">Location</label>
                                    <input asp-for="Location" class="form-control custom-field" />
                                    <span asp-validation-for="Location" class="text-danger"></span>
                                </div>

                                <!-- About Us Field -->
                                <div class="form-group mb-4">
                                    <label asp-for="Aboutus" class="control-label text-light">About Us</label>
                                    <textarea asp-for="Aboutus" class="form-control custom-field" rows="4"></textarea>
                                    <span asp-validation-for="Aboutus" class="text-danger"></span>
                                </div>

                                <!-- Facebook Field -->
                                <div class="form-group mb-4">
                                    <label asp-for="Facebook" class="control-label text-light">Facebook</label>
                                    <input asp-for="Facebook" class="form-control custom-field" />
                                    <span asp-validation-for="Facebook" class="text-danger"></span>
                                </div>

                                <!-- LinkedIn Field -->
                                <div class="form-group mb-4">
                                    <label asp-for="Linkedin" class="control-label text-light">LinkedIn</label>
                                    <input asp-for="Linkedin" class="form-control custom-field" />
                                    <span asp-validation-for="Linkedin" class="text-danger"></span>
                                </div>

                                <!-- Image Upload Field -->
                                <div class="form-group mb-4">
                                    <label asp-for="ImageFileaboutus" class="control-label text-light">Upload Image</label>
                                    <input asp-for="ImageFileaboutus" type="file" class="form-control custom-field" />
                                    <span asp-validation-for="ImageFileaboutus" class="text-danger"></span>
                                </div>

                                <!-- Profile Select Field -->
                                <div class="form-group mb-4">
                                    <label asp-for="Inprofileid" class="control-label text-light">Profile</label>
                                    <select asp-for="Inprofileid" class="form-control custom-field" asp-items="ViewBag.Inprofileid"></select>
                                    <span asp-validation-for="Inprofileid" class="text-danger"></span>
                                </div>

                                <!-- Buttons -->
                                <div class="form-group text-center">
                                    <input type="submit" value="Save" class="btn btn-primary btn-lg" />
                                    <a href="@Url.Action("Index", "Infofitnesses")" class="btn btn-secondary btn-lg">Back to List</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script src="~/DesignAdman/assets/vendors/js/vendor.bundle.base.js"></script>
<script src="~/DesignAdman/assets/vendors/chart.js/Chart.min.js"></script>
<script src="~/DesignAdman/assets/vendors/progressbar.js/progressbar.min.js"></script>
<script src="~/DesignAdman/assets/vendors/jvectormap/jquery-jvectormap.min.js"></script>
<script src="~/DesignAdman/assets/vendors/jvectormap/jquery-jvectormap-world-mill-en.js"></script>
<script src="~/DesignAdman/assets/vendors/owl-carousel-2/owl.carousel.min.js"></script>
<script src="~/DesignAdman/assets/js/off-canvas.js"></script>
<script src="~/DesignAdman/assets/js/hoverable-collapse.js"></script>
<script src="~/DesignAdman/assets/js/misc.js"></script>
<script src="~/DesignAdman/assets/js/settings.js"></script>
<script src="~/DesignAdman/assets/js/todolist.js"></script>
<script src="~/DesignAdman/assets/js/dashboard.js"></script>
      