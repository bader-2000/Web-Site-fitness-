@model IEnumerable<Fitness.Models.Infofitness>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Required meta tags -->
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<title>Corona Admin</title>
<!-- plugins:css -->
<link rel="stylesheet" href="~/DesignAdman/assets/vendors/mdi/css/materialdesignicons.min.css">
<link rel="stylesheet" href="~/DesignAdman/assets/vendors/css/vendor.bundle.base.css">
<link rel="stylesheet" href="~/DesignAdman/assets/vendors/jvectormap/jquery-jvectormap.css">
<link rel="stylesheet" href="~/DesignAdman/assets/vendors/flag-icon-css/css/flag-icon.min.css">
<link rel="stylesheet" href="~/DesignAdman/assets/vendors/owl-carousel-2/owl.carousel.min.css">
<link rel="stylesheet" href="~/DesignAdman/assets/vendors/owl-carousel-2/owl.theme.default.min.css">
<link rel="stylesheet" href="~/DesignAdman/assets/css/style.css">
<link rel="shortcut icon" href="~/DesignAdman/assets/images/favicon.png" />
<!-- CSS المدمج لتحسين التنسيق -->
<link rel="stylesheet" href="~/css/ManageStaticPages.css" />


<div class="content-wrapper bg-dark text-light">
    <div class="main-panel">
        <div class="col-12 grid-margin">
            <div class="card bg-secondary text-light">
                <div class="card-body">
                    <h4 class="card-title text-center">Manage Static Pages</h4>
                    <hr class="border-secondary">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="col-md-12 mb-4">
                                <div class="card shadow-lg bg-dark text-light border border-secondary">
                                    <div class="card-body">
                                     
                                        <div class="row mb-3">
                                            <div class="col-md-4 text-center">
                                         
                                                <div class="image-container" style="width: 100%; height: 200px; border: 3px solid #444; padding: 15px; margin-bottom: 20px; overflow: hidden; border-radius: 8px;">
                                                    <img src="@Url.Content("~/images/" + item.Photoaboutus)" class="img-fluid" style="width: 100%; height: 100%; object-fit: cover;" alt="Profile Image">
                                                </div>
                                                <h5 class="fw-bold text-light">Email: @Html.DisplayFor(modelItem => item.Email)</h5>
                                            </div>
                                            <div class="col-md-8">
                                                <p class="mb-2"><i class="mdi mdi-phone text-info"></i> <strong>Phone:</strong> @Html.DisplayFor(modelItem => item.Phone)</p>
                                                <p class="mb-2"><i class="mdi mdi-map-marker text-danger"></i> <strong>Location:</strong> @Html.DisplayFor(modelItem => item.Location)</p>
                                                <p><i class="mdi mdi-information text-warning"></i> <strong>About Us:</strong> @Html.DisplayFor(modelItem => item.Aboutus)</p>
                                            </div>
                                        </div>
                                        <hr class="border-secondary">
                                     
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <p><i class="mdi mdi-facebook text-primary"></i> <strong>Facebook:</strong> <a href="@item.Facebook" target="_blank" class="text-info">@item.Facebook</a></p>
                                            </div>
                                            <div class="col-md-6">
                                                <p><i class="mdi mdi-linkedin text-primary"></i> <strong>LinkedIn:</strong> <a href="@item.Linkedin" target="_blank" class="text-info">@item.Linkedin</a></p>
                                            </div>
                                        </div>
                                        <hr class="border-secondary">
                                       
                                        <div class="d-flex justify-content-between">
                                            <a asp-action="Edit" asp-route-id="@item.Idif" class="btn btn-sm btn-primary">Edit</a>
                                         
                                            <a asp-action="Delete" asp-route-id="@item.Idif" class="btn btn-sm btn-danger">Delete</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




<script src="~/DesignAdman/assets/vendors/js/vendor.bundle.base.js"></script>
<script src="~/DesignAdman/assets/vendors/chart.js/Chart.min.js"></script>
<script src="~/DesignAdman/assets/vendors/progressbar.js/progressbar.min.js"></script>
<script src="~/DesignAdman/assets/vendors/jvectormap/jquery-jvectormap.min.js"></script>
<script src="~/DesignAdman/assets/vendors/jvectormap/jquery-jvectormap-world-mill-en.js"></script>
<script src="~/DesignAdman/assets/vendors/owl-carousel-2/owl.carousel.min.js"></script>
<script src="~/DesignAdman/assets/js/off-canvas.js"></script>
<script src="~/DesignAdman/assets/js/hoverable-collapse.js"></script>
<script src="~/DesignAdman/assets/js/misc.js"></script>
<script src="~/DesignAdman/assets/js/settings.js"></script>
<script src="~/DesignAdman/assets/js/todolist.js"></script>
<script src="~/DesignAdman/assets/js/dashboard.js"></script>





































































