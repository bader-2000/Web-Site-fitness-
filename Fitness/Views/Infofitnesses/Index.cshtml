<div class="content-wrapper bg-dark text-light">
    <div class="main-panel">
        <div class="col-12 grid-margin">
            <div class="card bg-secondary text-light">
                <div class="card-body">
                    <h4 class="card-title text-center">Search for Subscriptions</h4>
                    <hr class="border-secondary">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="col-12">
                                <div class="card mb-4 shadow-sm bg-dark text-light border border-secondary">
                                    <div class="card-body">
                                        <!-- القسم الأول: المعلومات الأساسية -->
                                        <div class="row mb-3">
                                            <div class="col-md-4 text-center">
                                                <img src="@Url.Content("~/images/"+ item.ImageFileaboutus)" class="img-fluid rounded-circle border border-secondary mb-2" style="width: 120px; height: 120px; object-fit: cover;" alt="Profile Image">
                                                <h5 class="fw-bold"> Email : @Html.DisplayFor(modelItem => item.Email)</h5>
                                            </div>
                                            <div class="col-md-8">
                                                <p class="mb-1"><i class="mdi mdi-phone text-info"></i> <strong>Phone:</strong> @Html.DisplayFor(modelItem => item.Phone)</p>
                                                <p class="mb-1"><i class="mdi mdi-map-marker text-danger"></i> <strong>Location:</strong> @Html.DisplayFor(modelItem => item.Location)</p>
                                                <p><i class="mdi mdi-information text-warning"></i> <strong>About Us:</strong> @Html.DisplayFor(modelItem => item.Aboutus)</p>
                                            </div>
                                        </div>
                                        <hr class="border-secondary">
                                        <!-- القسم الثاني: الروابط -->
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <p><i class="mdi mdi-facebook text-primary"></i> <strong>Facebook:</strong> <a href="@item.Facebook" target="_blank" class="text-info">@item.Facebook</a></p>
                                            </div>
                                            <div class="col-md-6">
                                                <p><i class="mdi mdi-linkedin text-primary"></i> <strong>LinkedIn:</strong> <a href="@item.Linkedin" target="_blank" class="text-info">@item.Linkedin</a></p>
                                            </div>
                                        </div>
                                        <hr class="border-secondary">
                                        <!-- القسم الثالث: الأزرار -->
                                        <div class="d-flex justify-content-between">
                                           
                                            <a asp-action="Edit" asp-route-id="@item.Idif" class="btn btn-sm btn-primary">Edit</a>
                                            <a asp-action="Details" asp-route-id="@item.Idif" class="btn btn-sm btn-info">Details</a>
                                            <a asp-action="Delete" asp-route-id="@item.Idif" class="btn btn-sm btn-danger">Delete</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

